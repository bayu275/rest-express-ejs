<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
    <body>
        <div class="container">
            <div class="row justify-content-center mt-4">
                <h1 class="text-center">Comments</h1>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">No</th>
                            <th scope="col">Comment</th>
                            <th scope="col">User</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for( let index = 0; index < comments.length; index++ ) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td class="col"><%= comments[index].text %></td>
                            <td><%= comments[index].username %></td>
                            <td>
                                <a class="btn btn-info btn-sm" href="/comments/<%= comments[index].id %>" role="button"
                                    >Details</a
                                >
                                <a
                                    class="btn btn-primary btn-sm"
                                    href="/comments/<%= comments[index].id %>/edit"
                                    role="button"
                                    >Edit</a
                                >
                                <form
                                    class="d-inline"
                                    action="/comments/<%= comments[index].id %>?_method=DELETE"
                                    method="POST"
                                >
                                    <input type="hidden" name="_method" value="DELETE" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                            <% } %>
                        </tr>
                    </tbody>
                </table>
                <a class="btn btn-success" href="/comments/create" role="button">Add Comment</a>
            </div>
        </div>
    </body>
</html>
